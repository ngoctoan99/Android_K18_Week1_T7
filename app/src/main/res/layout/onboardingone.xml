<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/vongtron"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"></ImageView>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/man"></ImageView>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/custom3"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="150dp"></ImageView>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/icon1"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="25dp"></ImageView>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon2"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="300dp"></ImageView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon3"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="310dp"></ImageView>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon4"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="70dp"></ImageView>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/item"></ImageView>

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="460dp"
        android:gravity="center"
        android:text="Browse your menu and order directly"
        android:textColor="#0A1342"
        android:textSize="35dp"
        android:textStyle="normal"></TextView>
    <TextView
        android:id="@+id/text9"
        android:layout_width="400dp"
        android:gravity="center"
        android:layout_height="100dp"
        android:hint = "Our app can send you everywhere, even space. For only $2.99 per month"
        android:textColor="#0A2098"
        android:textStyle="normal"
        android:layout_marginTop="540dp"
        android:textSize="20dp"></TextView>
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/custom2"
        android:layout_below="@+id/text9"
        android:text="->"
        android:textSize="30dp"
        android:layout_marginLeft="170dp"
        app:backgroundTint="#DAFF5722"></Button>
</RelativeLayout>