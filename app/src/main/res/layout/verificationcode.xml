<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#19000000">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vongtron1"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="-50dp"></ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vongtron2"
        android:layout_marginTop="-90dp"></ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vongtron3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-100dp"
        android:layout_marginTop="-110dp"></ImageView>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:layout_marginLeft ="20dp"
        android:layout_marginTop="100dp">
    </TextView>
    <TextView
        android:id="@+id/text7"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft ="20dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="20dp"
        android:text="Please type the verification code sent to prelookstudio@gmail.com"></TextView>
    <EditText
        android:id="@+id/edit4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/custom1"
        android:layout_below="@+id/text7"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"></EditText>
    <EditText
        android:id="@+id/edit5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/custom1"
        android:layout_below="@+id/text7"
        android:layout_toRightOf="@id/edit4"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"></EditText>
    <EditText
        android:id="@+id/edit6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/edit5"
        android:background="@drawable/custom1"
        android:layout_below="@+id/text7"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"></EditText>
    <EditText
        android:id="@+id/edit7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/edit6"
        android:background="@drawable/custom1"
        android:layout_below="@+id/text7"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"></EditText>
    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/edit4"
        android:layout_marginTop="30dp"
        android:hint="I don't recevie a code! "></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit4"
        android:layout_toRightOf="@id/text8"
        android:layout_marginTop="30dp"
        android:textColor="#F44336"
        android:text="Please resend"></TextView>

</RelativeLayout>